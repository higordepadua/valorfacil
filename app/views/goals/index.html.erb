<%- model_class = Goal -%>

<%= form_tag  goal_path, :method => 'get', :id => "ajax_search_form" do %>
<div class="page-header">
    <h1><%=t '.title', :default => "Listagem dos objetivos cadastrados" %></h1>
    <div class="pull-right">
        <%= link_to new_goal_path, :remote => true,
        :class => "btn btn-primary", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-star icon-white"></i> Novo Objetivo
        <% end %>

    </div>
</div>
<div class="row-fluid">
    <div id="table_div" class="span12">
        <%= render :partial => 'goals_table' %>
    </div>
</div>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_goal_path,
            :class => 'btn btn-primary' %>
