<%- model_class = Goal -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Listagem dos objetivos cadastrados" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Data Inicio</th>
      <th> Data Fim</th>
      <th> Frequência</th>
      <th> Prazo</th>
      <th> Grau de Importância (1-5)</th>
      <th>Custo Esperado Total</th>
      <th>Custo Mensal</th>
      <th>Custo Efetivo Total</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @goals.each do |goal| %>

    <% 
    endDate = nil
    if goal.endDate = nil then
    	endDate = goal.startDate >> goal.frequency
    else
    	endDate = goal.endDate
    end

    numberOfPeriods = 12
    %>
    	
      <tr>
        <td><%= link_to goal.description, goal_path(goal) %></td>
        <td><%= goal.startDate.strftime("%d/%m/%Y") %></td>
        <td><%= endDate %></td>
        <td><%= goal.frequency %></td>
        <td><%= numberOfPeriods %></td>
        <td><%= goal.importanceRate %></td>
        <td><%= goal.expectedAmount %></td>
        <td><%= goal.expectedAmount %></td>
        <td><%= goal.expectedAmount %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_goal_path(goal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      goal_path(goal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_goal_path,
            :class => 'btn btn-primary' %>
