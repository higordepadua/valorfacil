<%= simple_form_for @inflation_rate, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :month %>
  <%= error_span(@inflation_rate[:month]) %>
  <%= f.input :year %>
  <%= error_span(@inflation_rate[:year]) %>
  <%= f.input :percent %>
  <%= error_span(@inflation_rate[:percent]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                inflation_rates_path, :class => 'btn btn-default' %>
<% end %>
