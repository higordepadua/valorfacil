<p id="notice"><%= notice %></p>

<h1>Listing Inflation Rates</h1>

<table>
  <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inflation_rates.each do |inflation_rate| %>
      <tr>
        <td><%= inflation_rate.month %></td>
        <td><%= inflation_rate.year %></td>
        <td><%= inflation_rate.percent %></td>
        <td><%= link_to 'Show', inflation_rate %></td>
        <td><%= link_to 'Edit', edit_inflation_rate_path(inflation_rate) %></td>
        <td><%= link_to 'Destroy', inflation_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

