<%- model_class = InflationRate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:month) %>:</strong></dt>
  <dd><%= @inflation_rate.month %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @inflation_rate.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:percent) %>:</strong></dt>
  <dd><%= @inflation_rate.percent %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              inflation_rates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inflation_rate_path(@inflation_rate), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inflation_rate_path(@inflation_rate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
